<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <!--android:fontFamily="@font/lobster"-->

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/guymodel" />

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:fontFamily="@font/lobster"
        android:text="Welcome to Vaain Join us Today"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/etEnterEmail"
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="97dp"
        android:background="@drawable/border"
        android:ems="10"
        android:hint="Enter a email"
        android:inputType="textEmailAddress"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/background_light"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="61dp" />

    <EditText
        android:id="@+id/etEnterPass"
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="163dp"
        android:background="@drawable/border"
        android:ems="10"
        android:hint="Enter a password"
        android:inputType="textPassword"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/background_light" />

    <EditText
        android:id="@+id/etEnterPhone"
        android:layout_width="358dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="224dp"
        android:background="@drawable/border"
        android:ems="10"
        android:hint="Enter a phone number"
        android:inputType="phone"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/background_light" />

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="97dp"
        android:text="Sign Up"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textColor="@android:color/white"/>

    <CheckBox
        android:id="@+id/cbClient"
        android:layout_width="81dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/etEnterEmail"
        android:layout_marginBottom="152dp"
        android:onClick="onCheckboxClicked"
        android:text="Client"
        android:textColor="@android:color/white"
        android:textColorHighlight="@android:color/white" />

    <CheckBox
        android:id="@+id/cbBeaut"
        android:layout_width="79dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cbClient"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:onClick="onCheckboxClicked"
        android:text="Beaut"
        android:textColor="@android:color/white" />
</RelativeLayout>