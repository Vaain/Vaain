<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical|center_horizontal">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/item_home"
        android:layout_width="280dp"
        android:layout_height="422dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="23dp"
        android:background="@android:color/background_light">

        <ImageView
            android:id="@+id/ivDProfilePic"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp" />

        <ImageView
            android:id="@+id/ivDProduct"
            android:layout_width="280dp"
            android:layout_height="260dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ivDProfilePic"
            android:layout_marginTop="5dp"
            android:scaleType="fitXY" />

        <Button
            android:id="@+id/btnDRequest"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@color/vaain_red"
            android:text="Request" />

        <TextView
            android:id="@+id/tvDiaBeautName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ivDProfilePic"
            android:layout_toStartOf="@+id/tvDPrice"
            android:background="@android:color/transparent"
            android:text="Name"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDPrice"
            android:layout_width="53dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="92dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/product_name_textview"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:id="@+id/tvDDescript"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ivDProduct"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:id="@+id/tvDProName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ivDProfilePic"
            android:layout_toEndOf="@+id/imageView2"
            android:background="@android:color/transparent"
            android:text="ProName"
            android:textColor="@android:color/background_dark" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_below="@+id/tvDiaBeautName"
            android:layout_toStartOf="@+id/tvDiaBeautName"
            app:srcCompat="@drawable/ic_location_on_black_24dp" />

        <TextView
            android:id="@+id/tvLoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvDProName"
            android:layout_below="@+id/tvDiaBeautName"
            android:text="TextView"
            android:textColor="@android:color/background_dark" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tvGen"
        android:layout_width="280dp"
        android:layout_height="41dp"
        android:layout_above="@+id/item_home"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-23dp"
        android:background="#f2eb5e55"
        android:gravity="center_vertical"
        android:text="NAILS"
        android:textAlignment="center"
        android:textSize="30sp" />

</RelativeLayout>